<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="190dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp">

    <ImageView
        android:id="@+id/entertainmentImagePoster"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/entertainmentTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="TextView"
        android:maxLines="2"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/entertainmentImagePoster"
        app:layout_constraintTop_toBottomOf="@+id/entertainmentImagePoster" />
</android.support.constraint.ConstraintLayout>