<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cardBackground"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/castMemberImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/cast_member_image_view_background"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/castMemberNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/castMemberImageView"
        app:layout_constraintStart_toEndOf="@+id/castMemberImageView"
        app:layout_constraintTop_toTopOf="@+id/castMemberImageView"
        app:layout_constraintVertical_bias="0.20999998" />

    <TextView
        android:id="@+id/castMemberCharacterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/castMemberImageView"
        app:layout_constraintStart_toEndOf="@+id/castMemberImageView"
        app:layout_constraintTop_toTopOf="@+id/castMemberImageView"
        app:layout_constraintVertical_bias="0.8" />
</android.support.constraint.ConstraintLayout>